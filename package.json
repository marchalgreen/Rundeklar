{
  "name": "rundeklar",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter webapp dev",
    "build": "pnpm --filter common build && pnpm --filter webapp build && mkdir -p dist && cp -R packages/webapp/dist/* dist/",
    "validate": "pnpm typecheck && pnpm lint",
    "lint": "pnpm --filter webapp lint",
    "typecheck": "pnpm --filter webapp typecheck",
    "test": "pnpm --filter webapp test",
    "test:e2e": "pnpm --filter webapp test:e2e",
    "test:e2e:ui": "pnpm --filter webapp test:e2e:ui",
    "test:e2e:headed": "pnpm --filter webapp test:e2e:headed",
    "test:e2e:debug": "pnpm --filter webapp test:e2e:debug",
    "build:guidelines": "node scripts/build-guidelines.mjs"
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "shadcn": "^3.5.0",
    "typescript-eslint": "^8.46.3"
  },
  "pnpm": {
    "packageManager": "pnpm@9.6.0"
  }
}
