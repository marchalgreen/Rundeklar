{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/rankings/update",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/refresh-statistics-views",
      "schedule": "0 2 * * *"
    }
  ]
}
