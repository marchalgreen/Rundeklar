{
  "buildCommand": "pnpm --filter webapp build",
  "outputDirectory": "packages/webapp/dist",
  "rootDirectory": "packages/webapp",
  "installCommand": "pnpm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
